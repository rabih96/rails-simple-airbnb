<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="/flats">Simple Airbnb</a>
    <div class="ms-auto flex">
      <%= link_to 'Add flat', new_flat_path, class:"btn btn-outline-primary" %>
    </div>
  </div>
</nav>
<div class="container">
  <h1>Add a new Flat</h1>
  <%= simple_form_for(@flat) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :number_of_guests, as: :integer %>
    <%= f.input :price_per_night, as: :integer %>
    <%= f.submit %>
  <% end %>
</div>
