<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="/flats">Simple Airbnb</a>
    <div class="ms-auto flex">
      <%= link_to 'Add flat', new_flat_path, class:"btn btn-outline-primary" %>
    </div>
  </div>
</nav>
<div class="container">
  <h1>Flats Available</h1>
  <p><%= @flats.count %> flats</p>

  <div class="container">
    <div class="row row-cols-3">
      <% @flats.each do |flat| %>
        <div class="col">
          <div class="card" style="width: 20rem;">
            <div class="card-body">
              <h5 class="card-title"><%= flat.name %></h5>
            </div>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">Price: $<%= flat.price_per_night %></li>
              <li class="list-group-item">Guests: <%= flat.number_of_guests %></li>
            </ul>
            <div class="card-footer">
              <%= link_to 'More Info', flat_path(flat), class:"btn btn-outline-primary" %>
              <%= link_to 'Edit', edit_flat_path(flat), class:"btn btn-outline-warning" %>
              <%= link_to 'Remove', flat_path(flat), method: :delete, data: { confirm: "Delete flat?" }, class:"btn btn-outline-danger" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
